<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="16dp" >

    <!--
        taken from under "android:layout_marginTop="60dp""

       app:cardElevation="4dp"
       app:cardUseCompatPadding="true"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:elevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="385dp">

            <ImageView
                android:id="@+id/enabledIndicatorImageView"
                android:layout_width="63dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/indicator" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/outerLinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewMakeBold"
                android:layout_width="match_parent"
                android:layout_height="336dp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"

                android:fontFamily="@font/montserrat"
                android:paddingStart="8dp"
                android:text="@string/first_affirmation"
                android:textColor="@color/color70black"

                android:textSize="64sp" />

            <View
                android:id="@+id/dividerView"
                style="@style/Divider"
                android:visibility="visible" />

            <TextView
                android:id="@+id/firstRemindMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="@string/first_Remind_me"
                android:textColor="@color/color70black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/firstTime"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingStart="8dp"
                android:text="@string/first_time"
                android:textColor="@color/color70black"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/innerLinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:paddingStart="4dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/disableButtonPressed"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="108dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/custom_button_shape"
                        android:text="@string/Disable_Button_Name"
                        android:textColor="@color/color70black"
                        android:textSize="13sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/editButtonPressed"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="108dp"
                        android:layout_height="32dp"

                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/custom_button_shape_edit"
                        android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"


                        android:paddingTop="4dp"
                        android:text="@string/Edit_Button_Name"
                        android:textColor="@color/color70black"
                        android:textSize="13sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>