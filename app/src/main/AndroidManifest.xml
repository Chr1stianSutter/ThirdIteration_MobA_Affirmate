<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.christian.thirditeration_moba_affirmate">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--
    * icon with text
    * android:icon="@mipmap/ic_launcher_launcher_icon"
    * android:roundIcon="@mipmap/ic_launcher_launcher_icon_round"
    -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_am_logo"

        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_am_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".NewCardActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity android:name=".EditCardActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <receiver android:name=".AlarmReceiver">

            <intent-filter>
                <action android:name="android.media.action.DISPLAY_NOTIFICATION"></action>
            </intent-filter>

        </receiver>

        <service android:enabled="true" android:name=".ServiceClass" />

    </application>

</manifest>